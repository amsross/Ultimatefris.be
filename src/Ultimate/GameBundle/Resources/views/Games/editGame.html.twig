{% extends 'UltimateGameBundle:Default:base.html.twig' %}

{% block title %}Edit Game &ndash; {{ parent() }}{% endblock title %}

{% block jumbotron %}
{% endblock jumbotron %}

{% block content %}
	<div class="row-fluid">
		<h2 class="game-title span12">Edit a Game</h2>
	</div>
	<div class="row-fluid">
		<form class="well span12" action="{{ path('put_game', {gId: form.vars.value.id}) }}" method="PUT" {{ form_enctype(form) }}>
			<div class="row-fluid">
				<div class="span4">
					{{ form_label(form.title) }}
        			{{ form_errors(form.title) }}
					{{ form_widget(form.title) }}

					{{ form_label(form.location) }}
        			{{ form_errors(form.location) }}
					{{ form_widget(form.location) }}

					{{ form_label(form.date) }}
        			{{ form_errors(form.date) }}
					{{ form_widget(form.date) }}

					{{ form_label(form.info) }}
        			{{ form_errors(form.info) }}
					{{ form_widget(form.info) }}

				</div>
				<div class="span8">
					<label>&nbsp;</label>
					<a id="game_map_link" target="_blank" href="https://maps.google.com/maps?z=14&daddr={{ form.vars.value.location }}">
						<img id="game_map" class="span12" src="http://maps.googleapis.com/maps/api/staticmap?center={{ form.vars.value.location }}&zoom=14&size=600x300&maptype=roadmap&markers=color:blue%7Clabel:G%7C{{ form.vars.value.location }}&sensor=false" />
					</a>

					<label>&nbsp;</label>
					<button type="submit" class="btn btn-primary pull-right span12">Submit</button>
					<!-- <textarea class="input-xlarge span5" rows="6"></textarea> -->
				</div>
				
				<div class="hidden">
					{{ form_rest(form) }}
				</div>

			</div>
		</form>
	</div>
	{% if posted is defined %}
	<div class="row-fluid">
		<div class="alert alert-block span12">
			<h4>Action successful
				<a href="#" class="btn btn-large pull-right">Continue</a>
			</h4>
			<p>Single line of descriptive text.</p>
		</div>
	</div>
	{% endif %}
{% endblock content %}

{% block javascripts %}
	{{ parent() }}

	<script type="text/javascript">
		$(function() {
			$('.form_datetime').datetimepicker({
				showMeridian: true,
				autoclose: true,
				todayBtn: true,
				format: 'yyyy-mm-dd HH:ii P',
				pickerPosition: "bottom-left",
				minuteStep: 30
			});
			$('#game_location').on('change', function() {

				var that = this;

				$.ajax({
					url: 'http://maps.googleapis.com/maps/api/geocode/json?address='+$(that).val()+'&sensor=false',
				}).done(function(data) {
					if (data.status === "OK") {
						var formatted_address = data.results[0].formatted_address;
						$('#game_map').attr('src', 'http://maps.googleapis.com/maps/api/staticmap?center='+formatted_address+'&zoom=14&size=600x300&maptype=roadmap&markers=color:blue%7Clabel:G%7C'+formatted_address+'&sensor=false');
						$('#game_map_link').attr('href', 'https://maps.google.com/maps?z=14&daddr='+formatted_address);
						$(that).val(formatted_address);
					}
				});
			});
		});
	</script>
{% endblock javascripts %}
